<% provide(:title, 'Mentions') %>
<!-- <h1>Mentions</h1> -->

<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
	  	<%if @user.mentioned_microposts.any? %>
		<h3>Mentions</h3>
	  	<ol class = "microposts">
	  		 <%= render partial: 'users/mention', collection: @mentions %>
	  	</ol>
	  	<%= will_paginate @mentions %>
	  	<%end%>
	</div>
</div>